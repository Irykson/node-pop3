{
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "strict": ["error"],
    "indent": ["error", 2, {"outerIIFEBody": 0}],
    "semi": ["error"],
    "prefer-const": ["error"],
    "no-var": ["error"],
    "prefer-destructuring": ["error"],
    "object-shorthand": ["error"],
    "quotes": ["error", "single"]
  }
}
