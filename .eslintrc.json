{
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2015
  },
  "env": {
    "es6": true,
    "node": true
  },
  "overrides": [
    {
      "files": "bin/**",
      "parserOptions": {
        "sourceType": "script"
      },
      "rules": {
        "no-var": 0,
        "prefer-destructuring": 0
      }
    }
  ],
  "rules": {
    "strict": ["error"],
    "indent": ["error", 2],

    "semi": ["error"],
    "prefer-const": ["error"],
    "no-var": ["error"],
    "prefer-destructuring": ["error"],
    "object-shorthand": ["error"],
    "quotes": ["error", "single"]
  }
}
